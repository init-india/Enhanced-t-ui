<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools">

    <!-- ðŸ”¹ Permissions -->
    <uses-permission android:name="android.permission.READ_SMS"/>
    <uses-permission android:name="android.permission.RECEIVE_SMS"/>
    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name="android.permission.READ_CALL_LOG"/>
    <uses-permission android:name="android.permission.WRITE_CALL_LOG"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>
    <uses-permission android:name="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.BIND_DEVICE_ADMIN"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:theme="@style/Custom.Solid"
        tools:replace="android:theme">

        <!-- ðŸ”¹ Main Launcher Activity -->
        <activity
            android:name="ohi.andre.consolelauncher.LauncherActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- ðŸ”¹ Device Admin Receiver -->
        <receiver
            android:name="ohi.andre.consolelauncher.DeviceAdminReceiver"
            android:permission="android.permission.BIND_DEVICE_ADMIN"
            android:exported="true">
            <meta-data
                android:name="android.app.device_admin"
                android:resource="@xml/device_admin_receiver"
                tools:replace="android:resource"/>
            <intent-filter>
                <action android:name="android.app.action.DEVICE_ADMIN_ENABLED"/>
            </intent-filter>
        </receiver>

        <!-- ðŸ”¹ Boot Completed Receiver -->
        <receiver
            android:name="ohi.andre.consolelauncher.BootReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>

        <!-- ðŸ”¹ Call Receiver -->
        <receiver
            android:name="ohi.andre.consolelauncher.receivers.CallReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.PHONE_STATE"/>
            </intent-filter>
        </receiver>

        <!-- ðŸ”¹ SMS Receiver -->
        <receiver
            android:name="ohi.andre.consolelauncher.receivers.SmsReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_RECEIVED"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </receiver>

        <!-- ðŸ”¹ Notification Services -->
        <service
            android:name="ohi.andre.consolelauncher.services.NotificationBridge"
            android:exported="false"
            tools:replace="android:exported" />

        <service
            android:name="ohi.andre.consolelauncher.managers.notifications.NotificationService"
            android:exported="true"
            tools:replace="android:exported">
            <intent-filter>
                <action android:name="com.android.launcher.notification.BRIDGE"/>
            </intent-filter>
        </service>

        <service
            android:name="ohi.andre.consolelauncher.managers.notifications.NotificationMonitorService"
            android:exported="false"
            tools:replace="android:exported" />

        <service
            android:name="ohi.andre.consolelauncher.managers.notifications.KeeperService"
            android:exported="false"
            tools:replace="android:exported" />

    </application>
</manifest>
