<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="ohi.andre.consolelauncher">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" tools:node="merge"/>
    <uses-permission android:name="android.permission.RECEIVE_SMS" tools:node="merge"/>
    <uses-permission android:name="android.permission.READ_SMS" tools:node="merge"/>
    <uses-permission android:name="android.permission.SEND_SMS" tools:node="merge"/>
    <uses-permission android:name="android.permission.READ_CONTACTS" tools:node="merge"/>
    <uses-permission android:name="android.permission.WRITE_CONTACTS" tools:node="merge"/>
    <uses-permission android:name="android.permission.READ_CALL_LOG" tools:node="merge"/>
    <uses-permission android:name="android.permission.CALL_PHONE" tools:node="merge"/>
    <!-- Add other permissions needed by your app -->

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:theme="@style/AppTheme"
        tools:replace="android:theme">

        <!-- Main Launcher Activity -->
        <activity
            android:name="ohi.andre.consolelauncher.LauncherActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Other activities -->
        <activity
            android:name="ohi.andre.consolelauncher.TuixtActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <!-- Services -->
        <service
            android:name="ohi.andre.consolelauncher.managers.notifications.NotificationMonitorService"
            android:exported="true"/>

        <service
            android:name="ohi.andre.consolelauncher.services.NotificationListener"
            android:exported="true"
        <!-- Device Admin Receiver -->
        <receiver
            android:name="ohi.andre.consolelauncher.DeviceAdminReceiver"
            android:permission="android.permission.BIND_DEVICE_ADMIN"
            android:exported="true"
            <meta-data
                android:name="android.app.device_admin"
                android:resource="@xml/device_admin_receiver"/>
            <intent-filter>
                <action android:name="android.app.action.DEVICE_ADMIN_ENABLED"/>
            </intent-filter>
        </receiver>

        <!-- Boot Receiver -->
        <receiver
            android:name="ohi.andre.consolelauncher.BootReceiver"
            android:enabled="true"
            android:exported="true"
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>

        <!-- Call & SMS Receivers -->
        <receiver
            android:name="ohi.andre.consolelauncher.receivers.CallReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.PHONE_STATE"/>
                <action android:name="android.intent.action.NEW_OUTGOING_CALL"/>
            </intent-filter>
        </receiver>

        <receiver
            android:name="ohi.andre.consolelauncher.receivers.SmsReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_RECEIVED"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </receiver>

    </application>
</manifest>
